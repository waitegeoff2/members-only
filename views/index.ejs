<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
   <% if (locals.user) {%>
    <h1>Welcome back <%= user.fullname %></h1>
    <a href="/new-message">Post a message please!</a>
    <a href="/log-out">Log out</a>
  <% } else { %>
  <h1>Log in to the club</h1>
  <form action="/log-in" method="POST">
    <label for="username">Username</label>
    <input id="username" name="username" placeholder="Your email" type="text" />
    <label for="password">Password</label>
    <input id="password" name="password" type="password" />
    <button type="submit">Log In</button>
  </form>
  <a href="/sign-up">Become a member.</a>
  <%}%>
  <ul class="message-list"></ul>
  <% messages.forEach((message) => { %>
    <li>
        <div class="message-block">
            <span><b>User:</b> <%= message.title %></span>
            <span><b>Message:</b> <%= message.message %></span>
            <span><b>Date sent:</b> <%= message.time_stamp %></span>
        </div>
    </li>
  <% }) %>
  </ul>
  
</body>
</html>