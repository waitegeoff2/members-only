<html>
<head>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- currentUser is available because of the middleware added in app - it's taken from the cookie -->
    <% console.log(currentUser) %>
   <h2><%= currentUser.fullname %>, post your message:</h2>
   <form class="new-message-form" method="POST" action="/new-message">
        <label for="title"><b>Title:</b></label>
        <input type="text" name="title" id="title" placeholder="Enter message here...">
        <label for="message"><b>Message:</b></label>
        <textarea name="message" id="message" placeholder="Enter message here..."></textarea>
        <input type="hidden" name="userInfo" value="<%= currentUser.id %>">
        <input type="submit" value="submit">
   </form>    
   <a href="/">Back home</a>
</body>
</html>