<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1 class="sign-up-title">Sign Up</h1>
  <%- include("partials/errors.ejs") %>
  <form class="sign-up-form" action="/sign-up" method="POST">
    <div class="form-section">
        <label for="fullname">Full name</label>
        <input id="fullname" name="fullname" placeholder="Full name" type="text" />
    </div>
    <div class="form-section">
        <label for="username">Username (email)</label>
        <input id="username" name="username" placeholder="username" type="email" />
    </div>
    <div class="admin-check">
        <label for="admin">Is admin?</label>
        <input type="checkbox" name="admin" id="admin">
    </div>
    <div class="form-section">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" />
    </div>
    <div class="form-section">
        <label for="confirmpassword">Confirm Password</label>
        <input id="confirmpassword" name="confirmpassword" type="password" />
    </div>
    <button class="sign-submit" type="submit">Sign Up</button>
  </form>
</body>
</html>